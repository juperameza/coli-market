<footer class="footer">
  <section class="footer-about">
    <div class="footer-about__box">
      <%= image_tag("logo.png", class: "footer-about__icon", alt: "Master logo") %>
    </div>
    <p class="footer-about__text">Coli-Market ha sido creada con la finalidad de fortalecer 
    los emprendimientos locales del Estado de Colima, impulsando a los micro y pequeños comercios
    de la región. </p>
  </section>
  <section class="footer-nav">
    <p class="footer-nav__text">Enlaces</p>
    <div class="footer-nav__box">
      <%= link_to "Productos", posts_path, class: "footer-nav__text--yellow" %>
      <% if user_signed_in? %>
        <%= link_to "Incio", root_path, class: "footer-nav__text--yellow" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "footer-nav__text--yellow" %>
      <% end %>
    </div>

  </section>
  <section class="footer-contact">
    <p class="footer-contact__text--title">Contacto</p>
    <div class="footer-contact__box">
      <i class="fa-solid fa-address-book footer-contact__icon"></i>
      <p class="footer-contact__text">+52 1111111</p>
    </div>
    <div class="footer-contact__box">
      <i class="fa-solid fa-at footer-contact__icon"></i>
      <p class="footer-contact__text">contacto@colimarket.com</p>
    </div>
  </section>
  <section class="footer-social">
    <p class="footer-social__text">Redes sociales</p>
    <div class="footer-social__box">
      <i class="fa-brands fa-instagram-square footer-social__icon"></i>
      <i class="fa-brands fa-whatsapp-square footer-social__icon"></i>
      <i class="fa-brands fa-facebook-square footer-social__icon"></i>
      <i class="fa-brands fa-twitter-square footer-social__icon"></i>
    </div>
  </section>
  <div class="footer-copyrigth">
    <p class="footer-copyrigth__text">Todos los derechos reservados © COLI-MARKET </p>
  </div>
  <div class="footer__box">
    <%= image_tag("Master.png", class: "footer__image", alt: "Master logo") %>
  </div>
</footer>
